<div class="bg-white mb-2 rounded w-[calc(25%_-_.5rem)]">
    <%= link_to product_path(product.id), class: 'product' do %>
        <%= image_tag product.photo, width: 200, class: "w-full h-60 object-cover" %>
        <div class="m-2">
            <h3 class="font-bold text-xl"><%= product.name %></h3>
            <span>$<%= product.price %></span>
        </div>
    <% end %>
</div>